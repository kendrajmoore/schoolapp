<h1>Reviews</h1>
</br>
</br>
<div class="row justify-content-between">
<span class = "schools">

{{#each schools}}
<div class="col-sm-4">
    <form method="POST" action="/schools/{{this._id}}?_method=DELETE">
    <div class="buttons">
    <button type="submit" class="btn btn-default">Delete</button>
    </div>
    </form>

    <div class="buttons">
    <button onclick="location.href='/schools/{{this._id}}/edit'" class="btn btn-default">
     Edit</button>
    </div>
    <div class="schoolindex">
        <a href="/schools/{{this._id}}">
        <h3>{{this.name}}</h3></a>
        <small>{{this.address}}</small>
        <p>{{this.grades}}</p>
        </br>
        <p style="float:right;">Rating: {{this.rating}}</p>
        </br>
    </div>

  <hr>
</div>

{{/each}}
</div>
</span>
